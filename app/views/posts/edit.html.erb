<%= form_for @post do |f| %>
  <%= f.label :author %><br />
  <%= f.text_field :author %><br />

  <!-- AM: Interesting! Have never used this size attribute before! -->
  <%= f.label :post_body %><br />
  <%= f.text_area :post_body, size: "60x12" %><br />

  <%=  f.submit "Edit Post" %>
<% end %>


<%= form_for(@post, method: :delete) do |f| %>
  <%= f.submit "Delete Post", class: "delete" %>
<% end %>
