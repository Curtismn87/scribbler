<%= form_for [@post, @comment], method: :put do |f| %>

<%= f.label :name %><br />
<%= f.text_field :name %><br />

<%= f.label :comment_body %><br />
<%= f.text_area :comment_body, size: "60x12" %><br />

<%=  f.submit "Edit Comment" %>
<% end %>

<%= form_for [@post, @comment], method: :delete do |f| %>
<%= f.submit "Delete Comment", class: "delete" %>
<% end %>
